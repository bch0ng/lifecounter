<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainLayout"
        tools:context=".MainActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/scrollView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/linearLayout">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/player1Layout"
                    android:layout_height="wrap_content"
            >
                <TextView
                        android:text="Player 1:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player1Label"
                        android:textSize="32dp"
                        android:autoSizeTextType="uniform"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/player1LP"
                        app:layout_constraintVertical_bias="0.24000001"
                />
                <TextView
                        android:text="20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player1LP"
                        android:textSize="32dp"
                        android:autoSizeTextType="uniform"
                        app:layout_constraintStart_toEndOf="@+id/player1Label"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintVertical_bias="0.24000001"
                />
                <Button
                        android:text="-5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player1Minus5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/player1Label"
                        app:layout_constraintEnd_toStartOf="@+id/player1Minus1"
                />
                <Button
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player1Minus1"
                        app:layout_constraintStart_toEndOf="@+id/player1Minus5"
                        app:layout_constraintTop_toBottomOf="@+id/player1Label"
                        app:layout_constraintEnd_toStartOf="@+id/player1Plus1"
                />

                <Button
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player1Plus1"
                        app:layout_constraintTop_toBottomOf="@+id/player1LP"
                        app:layout_constraintStart_toEndOf="@+id/player1Minus1"
                        app:layout_constraintEnd_toStartOf="@+id/player1Plus5"
                />
                <Button
                        android:text="+5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player1Plus5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/player1LP"
                        app:layout_constraintStart_toEndOf="@+id/player1Plus1"
                />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/player2Layout"
            >
                <TextView
                        android:text="Player 2:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player2Label"
                        android:textSize="32dp"
                        android:autoSizeTextType="uniform"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/player2LP"/>
                <TextView
                        android:text="20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player2LP"
                        android:textSize="32dp"
                        android:autoSizeTextType="uniform"
                        app:layout_constraintStart_toEndOf="@+id/player2Label"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <Button
                        android:text="-5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player2Minus5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/player2Label"
                        app:layout_constraintEnd_toStartOf="@+id/player2Minus1"/>
                <Button
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player2Minus1"
                        app:layout_constraintStart_toEndOf="@+id/player2Minus5"
                        app:layout_constraintTop_toBottomOf="@+id/player2Label"
                        app:layout_constraintEnd_toStartOf="@+id/player2Plus1"/>

                <Button
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player2Plus1"
                        app:layout_constraintTop_toBottomOf="@+id/player2LP"
                        app:layout_constraintStart_toEndOf="@+id/player2Minus1"
                        app:layout_constraintEnd_toStartOf="@+id/player2Plus5"/>
                <Button
                        android:text="+5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player2Plus5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/player2LP"
                        app:layout_constraintStart_toEndOf="@+id/player2Plus1"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/player3Layout"
            >
                <TextView
                        android:text="Player 3:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player3Label"
                        android:textSize="32dp"
                        android:autoSizeTextType="uniform"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/player3LP"/>
                <TextView
                        android:text="20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player3LP"
                        android:textSize="32dp"
                        android:autoSizeTextType="uniform"
                        app:layout_constraintStart_toEndOf="@+id/player3Label"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <Button
                        android:text="-5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player3Minus5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/player3Label"
                        app:layout_constraintEnd_toStartOf="@+id/player3Minus1"/>
                <Button
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player3Minus1"
                        app:layout_constraintStart_toEndOf="@+id/player3Minus5"
                        app:layout_constraintTop_toBottomOf="@+id/player3Label"
                        app:layout_constraintEnd_toStartOf="@+id/player3Plus1"/>

                <Button
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player3Plus1"
                        app:layout_constraintTop_toBottomOf="@+id/player3LP"
                        app:layout_constraintStart_toEndOf="@+id/player3Minus1"
                        app:layout_constraintEnd_toStartOf="@+id/player3Plus5"/>
                <Button
                        android:text="+5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player3Plus5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/player3LP"
                        app:layout_constraintStart_toEndOf="@+id/player3Plus1"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/player4Layout"
            >
                <TextView
                        android:text="Player 4:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player4Label"
                        android:textSize="32dp"
                        android:autoSizeTextType="uniform"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/player4LP"/>
                <TextView
                        android:text="20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player4LP"
                        android:textSize="32dp"
                        android:autoSizeTextType="uniform"
                        app:layout_constraintStart_toEndOf="@+id/player4Label"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <Button
                        android:text="-5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player4Minus5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/player4Label"
                        app:layout_constraintEnd_toStartOf="@+id/player4Minus1"/>
                <Button
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player4Minus1"
                        app:layout_constraintStart_toEndOf="@+id/player4Minus5"
                        app:layout_constraintTop_toBottomOf="@+id/player4Label"
                        app:layout_constraintEnd_toStartOf="@+id/player4Plus1"/>

                <Button
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player4Plus1"
                        app:layout_constraintTop_toBottomOf="@+id/player4LP"
                        app:layout_constraintStart_toEndOf="@+id/player4Minus1"
                        app:layout_constraintEnd_toStartOf="@+id/player4Plus5"/>
                <Button
                        android:text="+5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/player4Plus5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/player4LP"
                        app:layout_constraintStart_toEndOf="@+id/player4Plus1"/>
            </android.support.constraint.ConstraintLayout>
            <TextView
                    android:text=""
                    android:id="@+id/playerLostLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="32dp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>